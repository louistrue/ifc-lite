{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm --filter @ifc-lite/data build && pnpm --filter @ifc-lite/mutations build && pnpm -r build",
  "outputDirectory": "apps/viewer/dist",
  "installCommand": "pnpm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/bsdd/:path*",
      "destination": "https://api.bsdd.buildingsmart.org/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.wasm",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/wasm"
        }
      ]
    }
  ]
}
