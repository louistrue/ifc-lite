{
  "name": "@ifc-lite/desktop",
  "version": "1.8.0",
  "description": "IFC-Lite Desktop Application - Native high-performance IFC viewer",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:frontend": "vite --port 3001",
    "build": "node -e \"if(process.env.VERCEL || process.env.CI) { console.log('Skipping Tauri build on CI/Vercel'); process.exit(0); } else { require('child_process').execSync('tauri build', {stdio:'inherit'}); }\"",
    "build:local": "tauri build",
    "build:frontend": "vite build",
    "build:windows": "tauri build --target x86_64-pc-windows-msvc",
    "build:macos": "tauri build --target universal-apple-darwin",
    "build:linux": "tauri build --target x86_64-unknown-linux-gnu"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@ifc-lite/cache": "workspace:^",
    "@ifc-lite/data": "workspace:^",
    "@ifc-lite/export": "workspace:^",
    "@ifc-lite/geometry": "workspace:^",
    "@ifc-lite/parser": "workspace:^",
    "@ifc-lite/query": "workspace:^",
    "@ifc-lite/renderer": "workspace:^",
    "@ifc-lite/spatial": "workspace:^",
    "@ifc-lite/wasm": "workspace:^",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-virtual": "^3.13.18",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^4.4.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
